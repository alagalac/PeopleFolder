<% provide(:title, 'New Idea') %>

<h1>New Idea</h1>

<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li><%= link_to "Ideas", ideas_path %></li>
  <li class="active">New</li>
</ol>

<%= form_for(@idea, :url => ideas_path, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>

  <%= render partial: 'shared/errors', locals: {object: @idea} %>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.text_area :content, :class => "form-control", :rows => 5, :placeholder => "Your idea..." %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= submit_tag "Suggest idea", :class => "btn btn-primary pull-right" %>
    </div>
  </div>
  
<% end %>