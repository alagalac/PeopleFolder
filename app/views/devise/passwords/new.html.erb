

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "dialog-form box" }) do |f| %>
  <%= devise_error_messages! %>

  <legend>Forgotten your password?</legend>
  <p>Enter your email address and we will email you a link to reset your password.</p>

  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, :class=> "form-control" %>
    </div>
  </div>

  <fieldset class="dialog-submit">
    <%= f.submit "Reset password", :class => "btn btn-primary" %>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>