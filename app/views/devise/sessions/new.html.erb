<% provide(:title, 'Log in') %>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "dialog-form box"}) do |f| %>

  <legend>Log in</legend>
  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :class => "input-block-level form-control", :autofocus => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :class => "input-block-level form-control" %>
    </div>
  </div>

  

  <fieldset class="dialog-submit">
    <%= f.submit "Log in", :class => "btn btn-primary" %>

    <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, :class => "control-label checkbox" do%>
          <%= f.check_box :remember_me %>
          Remember me
        <% end %>
    <% end -%>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
