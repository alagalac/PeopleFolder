<%= form_for(resource, :as => resource_name, :url => user_registration_path, :html => {:class => "dialog-form box"}) do |f| %>
  <%= devise_error_messages! %>

  <legend>Registration</legend>
  <p>Please enter your details below to get started.</p>

    <%= fields_for(@organisation) do |o| %>
    <div class="control-group">
      <%= o.label :name, "Organisation name", :class => "control-label" %>
      <div class="controls">
        <%= o.text_field :name, :autofocus => true, :class=> 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :first_name, "Your first name", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :first_name, :class=> 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :last_name, "Your surname", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :last_name, :class=> 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :autocomplete => "off", :class=> 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :autocomplete => "off", :class=> 'form-control' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password_confirmation, :autocomplete => "off", :class=> 'form-control' %>
    </div>
  </div>

  <fieldset class="dialog-submit">
    <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>
