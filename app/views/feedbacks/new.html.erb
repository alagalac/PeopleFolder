<% provide(:title, 'New Idea') %>

<h1>Give Feedback</h1>

<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">Give Feedback</li>
</ol>

<%= form_for(@feedback, :url => feedbacks_path, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>

  <%= render partial: 'shared/errors', locals: {object: @feedback} %>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.text_area :content, :class => "form-control", :rows => 5, :placeholder => "Your feedback..." %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <div class="checkbox">
        <label>
          <%= check_box_tag 'anonymous' %> Submit feedback anonymously (your identity will not be recorded)
        </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= submit_tag "Place Feedback", :class => "btn btn-primary pull-right" %>
    </div>
  </div>
  
<% end %>