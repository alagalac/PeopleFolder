<% provide(:title, 'Ask Question') %>

<h1>Ask a Question</h1>

<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li><%= link_to "Questions", questions_path %></li>
  <li class="active">Ask</li>
</ol>

<%= form_for(@question, :url => questions_path, :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>

  <%= render partial: 'shared/errors', locals: {object: @question} %>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.text_field :title, :class => "form-control", :placeholder => "Title" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.text_area :content, :class => "form-control", :rows => 5, :placeholder => "Your question..." %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= submit_tag "Ask Question", :class => "btn btn-primary pull-right" %>
    </div>
  </div>
  
<% end %>