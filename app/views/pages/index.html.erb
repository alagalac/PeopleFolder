<% provide(:title, 'Wiki') %>

<h1>Guides and How-tos</h1>

<ol class="breadcrumb">
  <li><a href="#">Home</a></li>
  <li class="active">Guides</li>
</ol>

<%= render partial: 'shared/flash' %>

<p>Would you like to <%= link_to("create a new page?", new_page_path) %></p>

